<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:id="@+id/blog_item">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:ignore="UselessParent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/request_profile_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/request_img"
                    tools:ignore="ObsoleteLayoutParam"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/black"
                    android:contentDescription="@string/request_profile_desc"/>

                <TextView
                    android:id="@+id/request_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/denk_one"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@id/request_profile_image"
                    tools:ignore="ObsoleteLayoutParam,RtlSymmetry" />

                <LinearLayout
                    android:id="@+id/time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@id/request_profile_image"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="10dp"
                    android:layout_below="@id/request_username"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/request_time_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:fontFamily="@font/antic"/>

                    <TextView
                        android:id="@+id/request_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:fontFamily="@font/antic"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_toEndOf="@id/request_profile_image"
                        tools:ignore="ObsoleteLayoutParam,RtlSymmetry" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/requset_button_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_layout"
                    android:layout_toEndOf="@id/request_profile_image"
                    android:layout_alignParentEnd="true"
                    android:paddingStart="8dp"
                    android:layout_marginTop="5dp"
                    tools:ignore="RtlSymmetry">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/request_accept_button"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="interested"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/antic"
                        android:textColor="@color/green"
                        app:strokeColor="@color/green"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/request_ignore_button"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="ignore"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/antic"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="@color/red"
                        android:layout_toEndOf="@id/request_accept_button"
                        android:layout_marginStart="8dp"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>